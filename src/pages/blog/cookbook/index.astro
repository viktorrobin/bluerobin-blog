---
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import { CATEGORIES, DIFFICULTIES } from "@/config";

// Get all cookbook-type posts
const allPosts = await getCollection("cookbook", ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => date.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" });
---

<MainLayout title="Cookbook | BlueRobin Tech Blog" description="Quick, copy-paste ready solutions for common problems">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium category-cookbook mb-4">
        üìã Cookbook
      </div>
      <h1 class="text-3xl sm:text-4xl font-display font-bold text-slate-900 dark:text-slate-100 mb-4">
        Cookbook Recipes
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl">
        Quick, copy-paste ready solutions to specific problems. 
        Each recipe includes complete working code you can adapt for your own projects.
      </p>
    </header>

    {sortedPosts.length === 0 ? (
      <div class="glass-card p-12 text-center">
        <p class="text-slate-600 dark:text-slate-400 text-lg">
          üöß Cookbook recipes coming soon! Check back after the foundational DDD articles.
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {sortedPosts.map((post) => {
          const difficultyMeta = DIFFICULTIES[post.data.difficulty];
          const seriesTags = post.data.tags.filter(t => t.endsWith("-series"));
          const regularTags = post.data.tags.filter(t => !t.endsWith("-series")).slice(0, 2);
          
          return (
            <article class="article-card">
              <div class="flex items-center gap-2 mb-3">
                <span class={`text-xs px-2 py-0.5 rounded-full difficulty-${post.data.difficulty}`}>
                  {difficultyMeta.label}
                </span>
                {post.data.readTime && (
                  <span class="text-xs text-slate-500 dark:text-slate-400">
                    ‚è±Ô∏è {post.data.readTime}
                  </span>
                )}
              </div>
              
              <a href={`/articles/${post.slug}/`}>
                <h2>{post.data.title}</h2>
              </a>
              
              <p>{post.data.description}</p>
              
              <div class="mt-4 flex flex-wrap gap-2">
                {seriesTags.map((tag) => (
                  <a href={`/tags/${tag}/`} class="tag tag-series text-xs">{tag.replace("-series", "")}</a>
                ))}
                {regularTags.map((tag) => (
                  <a href={`/tags/${tag}/`} class="tag text-xs">{tag}</a>
                ))}
              </div>
              
              <div class="mt-4 text-sm text-slate-500 dark:text-slate-400">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
              </div>
            </article>
          );
        })}
      </div>
    )}
  </div>
</MainLayout>
